<Page x:Class="daev5lr.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:daev5lr.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="АВТОРИЗАЦИЯ" FontSize="34"></TextBlock>
                <TextBlock Text="логин"></TextBlock>
                <TextBox x:Name="TbLogin"></TextBox>
                <TextBlock Text="пароль"></TextBlock>
                <PasswordBox x:Name="PbPassword"></PasswordBox>
                <Button x:Name="BtLogin" Content="войти" Click="BtLogin_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
